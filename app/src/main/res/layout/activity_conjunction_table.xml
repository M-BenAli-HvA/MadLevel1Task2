<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ConjunctionTableActivity">

    <TextView
        android:id="@+id/titleField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/tableLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.471" />

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="269dp"
        android:layout_height="349dp"
        android:layout_marginBottom="40dp"
        android:stretchColumns="*"
        app:layout_constraintBottom_toTopOf="@+id/submitBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TableRow
            android:id="@+id/headerRow"
            android:layout_width="match_parent"
            android:layout_height="77dp">

            <TextView
                android:id="@+id/tvA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/labelA"
                android:gravity="center"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/labelB"
                android:gravity="center"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvAB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/labelAB"
                android:textSize="20sp"
                android:textStyle="bold" />
        </TableRow>


        <TableRow
            android:id="@+id/row1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="30dp">

            <TextView
                android:id="@+id/row1col1T"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/labelTrue"
                android:gravity="center"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/row1col2T"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/labelTrue"
                android:gravity="center"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/answerRow1"
                android:layout_width="27dp"
                android:layout_height="wrap_content"
                android:autofillHints=""
                android:ems="10"
                android:gravity="center"
                android:inputType="textPersonName" />

        </TableRow>

        <TableRow
            android:id="@+id/row2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="30dp">

            <TextView
                android:id="@+id/row2col1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/labelTrue"
                android:textSize="20sp"
                android:gravity="center"/>

            <TextView
                android:id="@+id/row2col2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/labelFalse"
                android:gravity="center"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/answerRow2"
                android:layout_width="23dp"
                android:layout_height="wrap_content"
                android:autofillHints=""
                android:ems="10"
                android:gravity="center"
                android:inputType="textPersonName" />
        </TableRow>


        <TableRow
            android:id="@+id/row3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="30dp">

            <TextView
                android:id="@+id/row3col1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/labelFalse"
                android:textSize="20sp"
                android:gravity="center" />

            <TextView
                android:id="@+id/row3col2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/labelFalse"
                android:textSize="20sp"
                android:gravity="center" />

            <EditText
                android:id="@+id/answerRow3"
                android:layout_width="23dp"
                android:layout_height="wrap_content"
                android:autofillHints=""
                android:ems="10"
                android:gravity="center"
                android:inputType="textPersonName" />
        </TableRow>


        <TableRow
            android:id="@+id/row4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="30dp">

            <TextView
                android:id="@+id/row4col1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/labelFalse"
                android:textSize="20sp"
                android:gravity="center" />

            <TextView
                android:id="@+id/row4col2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/labelTrue"
                android:textSize="20sp"
                android:gravity="center" />

            <EditText
                android:id="@+id/answerRow4"
                android:layout_width="23dp"
                android:layout_height="wrap_content"
                android:autofillHints=""
                android:ems="10"
                android:gravity="center"
                android:inputType="textPersonName" />
        </TableRow>

    </TableLayout>

    <Button
        android:id="@+id/submitBtn"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginBottom="44dp"
        android:text="@string/submitLabel"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>